{# /** * @file * Default theme implementation to display a wather forecast. * *
Available variables: * - forecast: An array of array with forecast data. * -
units: The system used to render values. Can be metric or imperial. * * @see
template_preprocess_alps_weather_forecast() */ #}

<h2 class="" text-lg my-10>Forecast for {{ forecast.city.name }}</h2>
<div class="forecast-list">
  {% for item in forecast.list %}
  {{ include('@molecules/weather.html.twig',
    {
      'date1': item.dt_txt|date("d/m/Y"),
      'date2': item.dt_txt|date("H:i"),
      'title': item.weather[0].description|title,
      'temp': item.main.temp ~ '°' ~ (units == 'metric' ? 'C' : 'F'),
      'dialogUrl':
        path('alps_weather.details', {city:forecast.city.name, date:item.dt_txt}),
      'infoLabel': 'More info'|t,
    }
  ) }}
  <!-- <div class="forecast-element">
      <h3 class="forecast-element__date">{{ item.dt_txt|date("d/m/Y H:i") }}</h3>
      <p class="forecast-element__temp">{{ item.main.temp }} °{{ units == 'metric' ? 'C' : 'F' }}</p>
      <p class="forecast-element__description">{{ item.weather[0].description|title }}</p>
      <a href="{{ path('alps_weather.details', {city:forecast.city.name, date:item.dt_txt}) }}" class="use-ajax"
         data-dialog-type="dialog"
         data-dialog-options='{"width":700,"title":"{{ 'Details'|t }}"}'>More info</a>
    </div> -->
  {% endfor %}
</div>
